        color: seashell;
    }

    :root {
        --main-bg: #1e272e;
        --main-color: #0097e6;
    }

    body {
        display: flex;
        flex-direction: column;
        animation: body 3s;
        animation-iteration-count: infinite;
        animation-fill-mode: forwards;
        min-height: 100vh;

